{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; font: 18px/1.5 }
</style>

<div class="example-wrapper text-center my-3">
    <h1>Users management</h1>
    
    {% if is_granted('ROLE_ADMIN') %}
        <a href="/admin/users/create" class="btn btn-primary">Add a user</a>
    {% endif %}
    
    <table class="table table-striped table-responsive-lg my-2">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.firstName }}</td>
                    <td>{{ user.lastName }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <a href="{{ path('admin_users_edit', {id: user.id}) }}" class="btn btn-warning">Edit</a>
                        <a href="{{ path('admin_users_delete', {id: user.id}) }}" class="btn btn-danger" onclick="return confirm('Do you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}