{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; font: 18px/1.5 }
</style>

<div class="example-wrapper text-center my-3">
    <h1>All our products</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="/products/create" class="btn btn-primary">Add a product</a>
        <a href="/products/export" class="btn btn-success">Export as a CSV file</a>
    {% endif %}

    <table class="table table-striped table-responsive-lg my-2">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.price | number_format(2, ',', ' ') }} â‚¬</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a href="{{ path('product_edit', {id: product.id}) }}" class="btn btn-warning">Edit</a>
                            <a href="{{ path('product_delete', {id: product.id}) }}" class="btn btn-danger" onclick="return confirm('This action will delete this product');">Delete</a>
                        </td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}